<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Show</title>
  </head>
  <body>
    <h1>Artist: <%= @artist.name %></h1>

    <h1>Songs:</h1>
    <ul>
      <% @artist.songs.each do |song| %>
        <li>
          <a href="/songs/<%= song.slug %>"><%= song.name %></a>
        </li>
      <% end %>

      <h1>Genres:</h1>
      <ul>
        <% @artist.genres.each do |genre| %>
          <li>
            <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
          </li>
        <% end %>

    </ul>
  </body>
</html>
