<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Songs/Edit</title>
  </head>
  <body>

    <form action="/songs/<%= @song.slug %>" method="post">
      <input type="hidden" name="_method" value="patch">

      <label for="name">Name:</label>
      <input type="text" name="name" id="name" value="<%= @song.name %>">

      <label for="artist_name">Artist Name</label>
      <input type="text" name="artist_name" id="artist_name" value="<%= @song.artist.name %>">

      <% Genre.all.each do |genre| %>
        <label><%= genre.name %></label>
        <input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>>
      <% end %>

      <button type="submit" name="Save" id="Save">Save</button>
    </form>
  </body>
</html>
