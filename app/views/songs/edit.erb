
<h1>Update Song:</h1>

<form method="post" action="/songs/<%= @song.slug %>">
  <input type="hidden" name="_method" value="patch">
  <p>Song Name: <input type="text" value="<%= @song.name %>" id="name" name="song[name]"></p>

  <p>Artist Name: <input type="text" value="<%= @song.artist.name %>" id="Artist Name" name="artist[name]"></p>

  <p>check the songs genres: </p>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%= "checked" if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>
  <br></br>
  <input type="submit" value="Save">
</form>
